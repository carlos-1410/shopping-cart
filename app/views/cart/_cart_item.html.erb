<tr>
  <td><%= cart_item.product.code %></td>
  <td><%= cart_item.product.name %></td>
  <td><%= cart_item.quantity %></td>
  <td><%= number_to_currency cart_item.total_price, unit: "€" %></td>
  <td><%= cart_item.product.active_pricing_rule&.discount_type %></td>
  <td><%= number_to_currency cart_item.discount_amount, unit: "€" %></td>
  <td class="d-flex justify-content-center">
    <%= form_with(url: remove_from_cart_path) do |f| %>
      <%= f.hidden_field :product_id, value: cart_item.product_id %>
      <%= f.submit "Remove", class: "btn btn-sm btn-danger mr-1" %>
    <% end %>
  </td>
  <td>
    <%= form_with(url: add_to_cart_path) do |f| %>
      <%= f.hidden_field :cart, value: true %>
      <%= f.hidden_field :product_id, value: cart_item.product_id %>
      <%= f.number_field :quantity, value: 0 %>
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </td>
</tr>
