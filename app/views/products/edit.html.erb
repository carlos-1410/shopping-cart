<div class="ml-4">
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="col-6">
          <h1>Edit product: <%= @product.name %></h1>
        </div>
        <div class="col-6">
          <%= button_to "Destroy", product_path(@product), method: :delete, class: "btn btn-danger mt-2 mr-2 float-right" %>
        </div>
      </div>
      <hr/>
      <p style="color: green"><%= notice %></p>

      <%= render "form" %>
    </div>

    <div class="col-6">
      <%= render "discount_rules", product: @product %>
    </div>
  </div>
</div>
